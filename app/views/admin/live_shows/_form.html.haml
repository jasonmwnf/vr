%section.policy-index.margin-top-twenty{:style => "padding-bottom: 0px;"}
  .container-fluid
    = render "admin/panel/admin_panel"
    .row
      .col-sm-4.col-sm-offset-4
        %h2.title Live Show
        %hr
      = form_for [:admin, @live_show] do |f|
        .col-sm-4.col-sm-offset-4
          .form-group.text-center
            = f.text_field :title, placeholder: "Name of Live Show", class: "full-width text-center"
          .form-group.text-center
            %p
              %b Date of Event:
            = f.date_select :date, :order => [:month, :day, :year], class: "text-center"
          .form-group.text-center
            %p
              %b Time of Event:
            = f.time_select :time, placeholder: "Time", class: "full-width text-center", ampm: true
          .form-group.text-center
            = f.text_field :timezone, placeholder: "Timezone", class: "full-width text-center"
        .col-sm-4.col-sm-offset-4
          %button.btn.btn-default{:type => "submit"} Submit
:javascript
  $(document).ready(function(){
    $('input[type=file]').bootstrapFileInput();
  });


