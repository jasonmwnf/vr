%section.policy-index.margin-top-twenty{:style => "padding-bottom: 0px;"}
  .container-fluid
    = render "admin/panel/admin_panel"
    .row
      .col-sm-4.col-sm-offset-4
        %h2.title Users
        %hr
        %h5
          = link_to 'Add User', new_admin_user_path
    .row
      .col-sm-10.col-sm-offset-1
        %table.table.table-striped
          %thead
            %tr
              %th Email
              %th Paid
              %th Action
              %th Private Room
              %th
          %tbody
            - @users.each do |user|
              %tr
                %td
                  = user.email
                %td
                  = user.is_paid?
                %td
                  DELETE
                = form_for [:admin, user], method: :patch do |f|
                  %td
                    = f.text_field :private_rooms
                  %td
                    = f.submit 'Update Room', class: 'pr-button-fix'

