%section.video-index
  .container-fluid
    .row
      .col-sm-7.col-sm-offset-1
        %h2.title.uppercase.tli.fw-500 Live Show Schedules
        .col-xs-12.col-sm-10.col-sm-offset-1
          - @live_shows.each_slice(3) do |shows|
            .row.t-center
            - shows.each do |e|
              .col-sm-4.t-center
                %h5
                  %b
                    = e.title
                %hr/
                %p
                  = e.date
                  %br
                  = e.time
                  = precede(" ") do
                    = e.timezone
    .row
      .col-xs-12.live-stream
        %iframe{:allowfullscreen => "yes", :frameborder => "0", :height =>'100%', :scrolling => "no", :src => "http://content.streamhoster.com/player/lv_vrodproductions/broadcast1?autoPlay=1&showPlayPauseBtn=0&bufferTime=1&expandedBufferTime=60", :webkitallowfullscreen => "yes", :width => '100%'}      }
