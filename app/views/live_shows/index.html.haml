%section.video-index
  .container-fluid
    .row
      .col-sm-7.col-sm-offset-1
        %h2.title.uppercase.tli.fw-500 Live Show Schedules
        .col-xs-12.col-sm-10.col-sm-offset-1
            / - @live_shows.each_slice(3) do |shows|
            /   .row.t-center
            /   - shows.each do |e|
            /     .col-sm-4.t-center
            /       %h5
            /         %b
            /           = e.title
            /       %hr/
            /       %p
            /         = e.date
            /         %br
            /         = e.time.strftime("%I:00 %p")
            /         = precede(" ") do
            /           = e.timezone
    - if current_user.present? && current_user.is_paid?
      .row
        .col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2.live-stream.col-md-7.col-md-offset-2.col-lg-8
          %iframe{:allowfullscreen => "yes", :frameborder => "0", :height =>'100%', :scrolling => "no", :src => "http://content.streamhoster.com/player/lv_vrodproductions/broadcast1?autoPlay=1&showPlayPauseBtn=0&bufferTime=1&expandedBufferTime=60", :webkitallowfullscreen => "yes", :width => '100%'}      }
      .row
        .col-xs-12.col-sm-8.col-sm-offset-2.col-md-7.col-md-offset-2.col-lg-8
          %iframe{:allowtransparency => "true", :frameborder => "0", :height => "250px", :marginheight => "0", :marginwidth => "0", :scrolling => "no", :src => "https://chatroll.com/embed/chat/veronica-rodriguez-chat?id=n8QQt4jFQRg&platform=html&w=$0", :width => "100%"}
          %br/
          %div{:style => "font-size:0.9em;text-align:center;"}
            %a{:href => "http://chatroll.com/"} Chat Software
    - else
      .row
        .col-sm-10.col-sm-offset-1.text-center
          %h3
            You do not have access to this part of the site.
          %p Live shows are for subscribed members only, please click on #{ link_to "SIGN UP", new_user_registration_path } to become a subscribed member.

          %p After signing up you can view the live shows.


